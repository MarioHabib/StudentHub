<body id="page-top">

    <%- include ("header.ejs") %>

                <!-- Begin Page Content -->
                <div class=" row container-fluid justify-content-center mb-4">
 
                    <!-- Page Heading -->
                    <h2 class=" mb-4 text-primary ">Contact us</h2>

                </div>
                <!-- /.container-fluid -->
                <!-- Wrapper container -->
<div class="container">
<div class="row">
  
  <div class="form-res col-6">
    <!-- Bootstrap 5 starter form -->
    <form action="/contact" method="post" class="contact-form justify-content-left" >
      
  
      <!-- Name input -->
      <div class="mb-3">
        <label class="form-label text-primary" for="name">Name</label>
        <input  class="form-control" type="text"
        class="contact-form-text"
        placeholder="Your name"
        name="yourname"
        required/>
      </div>
  
      <!-- Email address input -->
      <div class="mb-3">
        <label class="form-label text-primary" for="emailAddress">Email Address</label>
        <input class="form-control" type="email"
        class="contact-form-text"
        placeholder="Your email"
        name="youremail"
        required />
      </div>

      <!-- Subjet input -->
      <div class="mb-3">
        <label class="form-label text-primary" for="name">Subjet</label>
        <input  class="form-control" type="text"
        class="contact-form-text"
        name="yoursubject"
        placeholder="Subject"
        required/>
      </div>

      <!-- Message input -->
      <div class="mb-3">
        <label class="form-label text-primary" for="message">Message</label>
        <textarea class="form-control" placeholder="Your message"
        name="yourmessage" style="height: 10rem;" required></textarea>
      </div>
  
      <!-- Form submit button -->
      <div class="d-grid">
        <button class="btn btn-primary btn-sm rounded mb-3" type="submit"
        id="form-submit"
        value="Send"
        required>Submit</button>
      </div>
    
    </form>
  </div>
  <div class="col-6">
<img class="contact-img" src="img/contact-us.svg"  alt="" srcset="">
  </div>
</div>
  </div>
 
            
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
