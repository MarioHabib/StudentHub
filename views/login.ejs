<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Login page is the first page that will be shown to the user that he/she can access StudentHub features. The user has to login with the username and password first, then he can access StudentHub services">
    <meta name="keywords" content="login, sign in, signup, studentHub login, log in, sign up, studentHub access , email studentHub ">

    <title>AAST Login - StudentHub</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/stylesheet.css" rel="stylesheet">
    

</head>

<body class="bg-gradient-primary">
    

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                        <div>
                                        
                                        <% if (locals.message) { %>
                                            <div class="text-center">
                                                <h1 class="h6 text-danger mb-2"><%= message %></h1>
                                            </div>
                                     <% } else { %>
                                        
                                     <% } %></div>

                             
                                    <form name="form" class="user" action="/auth" method="post">
                                        <div class="form-group">
                                            <input oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                            type = "number"
                                            maxlength = "10" name="studentid" type="number" class="form-control form-control-user"
                                                id="studentid" aria-describedby="emailHelp"
                                                placeholder="Student ID"  required>
                                        </div>
                                        <div class="form-group">
                                            <input name="password" type="password" class="form-control form-control-user"
                                                id="password" placeholder="PASSWORD" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                type = "number"
                                                maxlength = "20" required>
                                        </div>
                                        <script>
                                            function validateForm() {
                                                let x = document.forms["form"]["password"].value;
                                                const re = (/^(*'")$/);
                                                
                                                if (re.test(String(x)) == false) {
                                                    alert("PASSWORD must be valid");
                                                
                                                    return false;
                                                }
                                                return true;
                                                }
                                        </script>
                                        

                                        <input type="submit" value="Login" class="btn btn-primary btn-user btn-block" onclick="return validateForm()">
                                    </form>
                                        
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password">Forgot Password?</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/main.js"></script>

    

</body>

</html>